<% layout('layouts/boilerplate') %>
    <div class="container">
        <form action="/profile" method="GET">
            <div class="row">
                <div class="col-lg-11 my-1">
                    <span class="input-group">
                        <span class="input-group-text">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-search" viewBox="0 0 16 16">
                                <path
                                    d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                            </svg>
                        </span>
                        <input class="form-control" type="text" name="query" placeholder="Search by username">
                    </span>
                </div>
                <div class="col-lg-1 d-grid my-1">
                    <button class="btn btn-secondary btn-sm" type="submit">Search</button>
                </div>
            </div>
        </form>
        <div class="d-flex flex-column">
            <% users.forEach(user=> { %>
                <div class="card my-1 mx-1">
                    <div class="card-body d-flex flex-row">
                        <div class="mx-1">
                            <img class="profile-pic" src="<%= user.icon.url%>" alt="propic">
                        </div>
                        <div class="mx-1">
                            <div class="card-text">
                                <%= user.username%>
                            </div>
                            <div class="card-text">
                                <small class="fst-italic">
                                    <% if(user.about){ %>
                                        <%= user.about.slice(0, 200).concat('...') %>
                                            <% } else { %>
                                                <%= user.about %>
                                                    <% } %>
                                </small>
                            </div>
                        </div>
                        <a class="stretched-link" href="/profile/<%= user._id %>"></a>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>