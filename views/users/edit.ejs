<% layout('layouts/boilerplate') %>

    <h1 class="text-center">Edit Profile</h1>
    <div class="col-6 offset-3">
        <form class="validated-form" action="/profile/<%= user._id %>?_method=PUT" method="POST" novalidate
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="validationCustom02">About Yourself</label>
                <input class="form-control" type="text" id="validationCustom02" name="about" value="<%= user.about %>">
            </div>
            <div class="mb-3">
                <label for="profilePicture" class="form-label">Profile Picture</label>
                <input class="form-control" type="file" id="profilePicture" name="profilePicture">
            </div>
            <button type="submit" class="btn btn-success">Edit</button>
        </form>
    </div>